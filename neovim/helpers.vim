function DevMode()
    set expandtab
    set smarttab
    set ts=4
    set tw=100
    set sw=4
    set ss=4
    set cin
    set cursorline
endfunction

function LinuxDevMode()
    set noexpandtab
    set smarttab
    set ts=8
    set tw=100
    set sw=8
    set ss=8
    set cin
    set colorcolumn=80
endfunction
