[core]
	editor = nvim
	excludesfile = /home/<user>/.gitignore
	pager = delta

[delta]
	line-numbers = true
	side-by-side = true
	light = true

[push]
	default = simple

[pull]
	rebase = true
	ff = only

[diff]
	tool = vimdiff
	algorithm = histogram
	colorMoved = dimmed_zebra
	renames = copies

[difftool]
	prompt = false

[color]
	ui = auto

[color "diff"]
	meta = white bold
	frag = magenta bold
	old = red bold
	new = green bold
	oldMoved = blue bold
	newMoved = blue bold

[merge]
	conflictstyle = diff3
